<div id="<%= dom_id project %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= project.name %>
  </p>
  <p class="my-5">
    <strong class="block font-medium mb-1">Status:</strong>
    <%= project.status %>
  </p>
  <p class="my-5">
    <strong class="block font-medium mb-1">Description:</strong>
    <%= project.description %>
  </p>
  <p class="my-5">
    <strong class="block font-medium mb-1">Start date:</strong>
    <%= project.start_date %>
  </p>
  <p class="my-5">
    <strong class="block font-medium mb-1">End date:</strong>
    <%= project.end_date %>
  </p>
</div>
